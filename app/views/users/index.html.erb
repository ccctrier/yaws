<div class="well">
<legend>Users</legend>
<table class="table table-striped">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td></td>
      <td><%= link_to ('<i class="icon-edit"></i>').html_safe, edit_user_path(user.id), :class => "btn" %></td>
      <td><%= link_to ("<i class=\"icon-trash icon-white\"></i>").html_safe, user, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>

<div class="form-actions">
  <%= link_to "Add new User", new_user_path, :class => "btn btn-primary" %>
</div>
</div>
